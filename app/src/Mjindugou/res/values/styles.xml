<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fenxiagn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="login_edit">
        <item name="android:layout_height">37dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#B6B6B6</item>
        <item name="android:textCursorDrawable">@drawable/editcursor_login_size2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="wode_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="wode_item_icon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="wode_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/rgb_969696</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>