<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_66000000"
    android:id="@+id/pop_integral_remind"
    >

    <ImageView
        android:id="@+id/iv_integral_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_integral_remind"
        />

    <ImageView
        android:id="@+id/iv_integral_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_integral_close"
        android:layout_alignTop="@id/iv_integral_remind"
        android:layout_alignRight="@id/iv_integral_remind"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>